<%= content_for :side_bar do %>
<li class="nav-header">テスト</li>
<li><%= link_to "食べログ", "http://www.tabelog/com/" %></li>
<%- end -%>

<div class="page-header">
  <h1>Posts#index <small>Find me in app/views/posts/index.html.erb</small></h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr class="warning">
      <th>#</th>
      <th>名前</th>
      <th>住所</th>
      <th>TEL</th>
      <th>HP</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <%- @spots.each do |spot| %>
    <tr>
      <td><%= spot.id %></td>
      <td><%= spot.name %></td>
      <td><%= spot.address %></td>
      <td><%= spot.tel %></td>
      <td><%= link_to_if(spot.url.present?, spot.url.to_s, spot.url) %></td>
      <td width="55px"><%= link_to "[編集]", edit_spot_path(spot) %></br>
	<%= link_to "[削除]", spot, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <%- end -%>
  </tbody>
</table>

<div id="map" style='width: 100%; height: 400px;'></div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  });
</script>

<br />
