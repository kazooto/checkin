<%= form_for(@spot, :url => @spot.new_record? ? [ :new, :spot ] : [ :edit, :spot ]) do |f| %>
  <% [ :name, :category_id, :description, :address, :tel, :url, :latitude, :longitude ].each do |attr| %>
    <%= f.hidden_field attr %>
  <% end %>
  <%= f.submit '戻る', :class => "btn btn-success btn-sm" %>
<% end %>
